<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--First Card Start-->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp">

                <!--Fist Layout Start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Profile Layout Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!--Profile picture-->
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="30dp"
                                android:layout_marginBottom="20dp"
                                android:src="@drawable/profile_picture" />

                            <Button
                                android:id="@+id/userChangeProfilePicture"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginStart="100dp"
                                android:layout_marginTop="-50dp"
                                android:background="@drawable/ic_baseline_camera_alt_24" />

                        </LinearLayout>

                        <!--Name/stars/Icons Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <!--Name-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:text="Filha Greene"
                                android:textSize="25sp" />

                            <!--Score/Star Layout Start-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!--Score-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.9"
                                    android:textSize="25sp" />

                                <!--Star-->
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_baseline_star_24" />

                            </LinearLayout>
                            <!--Score/Star Layout End-->

                            <!--Images Layout Start-->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <!--Facebook-->
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/facebook" />
                                <!--Google Plus-->
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginEnd="20dp"
                                    android:src="@drawable/google_plus" />
                                <!--Idk-->
                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/ic_baseline_assignment_ind_24" />
                            </LinearLayout>
                            <!--Images Layout End-->

                        </LinearLayout>
                        <!--Name/stars/Icons Layout End-->
                    </LinearLayout>
                    <!--Profile Layout Start-->

                    <!--Info Profile Layout Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <!--Name Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_account_circle_24"
                                android:hint="Nome"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Name Layout End-->
                        <!--Age Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userAge"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                                android:hint="Idade"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Age Layout End-->
                        <!--Email Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_email_24"
                                android:hint="Email"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Email Layout End-->
                        <!--Phone Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_local_phone_24"
                                android:hint="+5551931094648"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Phone Layout End-->
                        <!--Address Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_location_on_24"
                                android:hint="Endereço"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Address Layout End-->
                        <!--Key Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userKey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_lock_24"
                                android:hint="34w5asf6@#78^9"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Key Layout End-->
                        <!--Password Layout Start-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/userPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/rounded_edittext"
                                android:drawableEnd="@drawable/ic_baseline_remove_red_eye_24"
                                android:hint="***************"
                                android:padding="10dp"
                                android:textColor="#000000" />
                        </LinearLayout>
                        <!--Password Layout End-->
                    </LinearLayout>
                    <!--Info Profile Layout End-->

                </LinearLayout>
                <!--Fist Layout End-->
            </androidx.cardview.widget.CardView>
            <!--First Card End-->

            <!--Second Card Start-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp">

                <!--Underage Layout Start-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:text="Usuário Menor de idade"
                        android:textSize="20sp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:drawableEnd="@drawable/ic_baseline_vpn_key_24"
                        android:hint="Procurar por contato"
                        android:padding="10dp"
                        android:textColor="#000000" />
                </LinearLayout>
                <!--Underage Layout End-->
            </androidx.cardview.widget.CardView>
            <!--Second Card End-->

            <!--Third Card Start-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:text="Usuário PcD"
                        android:textSize="20sp" />

                    <!--Deficiencia Fisica Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingStart="15dp"
                            android:text="Deficiência fisica"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/userPhysicallyDisabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="#377BB6"
                            android:checked="true" />

                    </LinearLayout>
                    <!--Deficiencia Fisica End-->
                    <!--Deficiencia Visual Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingStart="15dp"
                            android:text="Deficiência visual"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/userVisuallyDisabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="#377BB6"
                            android:checked="true" />

                    </LinearLayout>
                    <!--Deficiencia Visual End-->
                    <!--Deficiencia Auditiva Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingStart="15dp"
                            android:text="Deficiência auditiva"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/userHearingDisabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="#377BB6" />

                    </LinearLayout>
                    <!--Deficiencia Auditiva End-->
                    <!--Deficiencia Intelectual Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/rounded_edittext"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingStart="15dp"
                            android:text="Deficiência intelectual"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/userIntellectuallyDisabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:buttonTint="#377BB6" />

                    </LinearLayout>
                    <!--Deficiencia Intelectual End-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Third Card End-->

            <!--Forth Card Start-->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:gravity="center"
                        android:text="Verificação de perfil"
                        android:textSize="20sp" />

                    <!--Facebook Connect Layout Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/facebook">

                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="Facebook"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:text="Connect"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <!--Facebook Connect Layout End-->
                    <!--Google Connect Layout Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/google_plus" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="Google Plus"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:text="Connect"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <!--Google Connect Layout End-->

                    <!--CdI Upload Layout Start-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_assignment_ind_24" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_weight="1"
                            android:text="Carteira de Identidade"
                            android:textColor="#A9A9A9"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:autoLink="all"
                            android:linksClickable="true"
                            android:text="Upload"
                            android:textSize="20sp" />
                    </LinearLayout>
                    <!--CdI Upload Layout End-->

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Forth Card End-->

            <!--Save Button-->
            <Button
                android:id="@+id/userSaveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_edittext"
                android:backgroundTint="#134775"
                android:text="SALVAR"
                android:textColor="#FFF"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>